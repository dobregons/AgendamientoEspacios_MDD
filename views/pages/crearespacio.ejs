<div class="MainForm">
    <div class="container">
        <div class="main-div">
            <div class="panel">
                <h2>Formulario <span>Registro Espacios</span></h2>
            </div>
            <form method="POST" action="/espacio">
                <div class="form-group">
                    <input class="form-control" name="nombre" type="text" placeholder="&#128100;  Nombre del espacio (ej: salón 119)" required autofocus>
                </div>
                <div class="form-group">
                    <select class="form-control" data-style="btn-info" name="idtipoespacio">
                        <optgroup label="Selecciona el tipo de espacio">
                            <% tiposespacio.forEach(function(row){ %>
                                <option value="<%= row.id %>">
                                    <%= row.descripcion %>
                                </option>
                                <% }) %>
                        </optgroup>
                    </select>
                </div>

                <div class="form-group">
                    <input class="form-control" name="descripcion" type="text" placeholder="&#9993;  Descripción" required>
                </div>
                <div class="form-group">
                    <input class="form-control" name="capacidad" type="number" placeholder="&#35;  Capacidad" required>
                </div>
                <div class="form-group">
                    <input class="form-control" name="numcomputadores" type="number" placeholder="&#35;  Número Computadores" required>
                </div>
                <button type="submit" class="btn btn-primary">REGISTRAR</button>
            </form>
        </div>

    </div>
</div>